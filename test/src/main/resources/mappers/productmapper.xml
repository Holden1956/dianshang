<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.mapper.productmapper">
    <!--更新商品上架状态-->
    <update id="updateStatus">
        UPDATE t_product
        SET status = #{newStatus}
        where id = #{id}
    </update>
    <update id="updatePriority">
        update t_product
        set priority=#{newPriority}
        where id=#{id}
    </update>

    <delete id="delProductBuId">
        DELETE
        FROM t_product
        WHERE product_id = #{productId};
    </delete>
    <!--根据id查询商品-->
    <select id="getProductByID" resultType="com.example.pojo.commonPojo.Product">
        select *
        from t_product
        where id = #{id}
    </select>

    <!--获取新到好货商品List，status=1上架-->
    <select id="getNewList" resultType="com.example.pojo.commonPojo.Product">
        select *
        from t_product
        where status=1
        order by created_time DESC limit 4
    </select>

    <!--获取热销商品List，DESC降序，你给钱我就把你排在前面（设置优先级）-->
    <select id="getHotList" resultType="com.example.pojo.commonPojo.Product">
        select *
        from t_product
        where status=1
        order by priority DESC limit 4
    </select>

    <!--根据分类id查询商品-->
    <select id="getListByCategoryId" resultType="com.example.pojo.commonPojo.Product">
        select * from t_product where category_id=#{category_id}
    </select>

    <!--查询是否存在该分类-->
    <select id="getIdByCategoryId" resultType="java.lang.Integer">
        select id
        from t_product_category
        where id = #{category_id}
    </select>
    <select id="count" resultType="java.lang.Integer">
        select count(1)
        from t_product
        where category_id=#{category_id}
    </select>

    <select id="getProductByPage" resultType="com.example.pojo.commonPojo.Product">
        select *
        from t_product
        where category_id=#{category_id} limit #{offSet},#{pageSize}
    </select>
    <select id="getAllProduct" resultType="com.example.pojo.commonPojo.Product">
        select *
        from t_product
    </select>


</mapper>