<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.mapper.usermapper">

    <!-- 新增用户 -->
    <insert id="insert" parameterType="com.example.pojo.commonPojo.User">
        insert into t_user(id,username, password, salt, is_delete, created_user, created_time)
        values (#{id},#{username}, #{password}, #{salt}, #{isDelete}, #{createdUser}, now())
    </insert>

    <!--修改密码-->
    <update id="updatePwd">
        update t_user set password=#{password},salt=#{salt},modified_user=#{modifiedUser},modified_time=now()
        where id=#{id}
    </update>

    <!--根据当前登录用户信息更新用户信息-->
    <update id="updateUserINfo">
        update t_user set username=#{username},phone=#{phone},email=#{email},gender=#{gender},modified_user=#{modifiedUser},modified_time=now()
        where id=#{id}
    </update>

    <!--根据用户名去查询用户-->
    <select id="getUserByName" resultType="com.example.pojo.commonPojo.User">
        select * from t_user where username=#{username}
    </select>

    <!--根据用户id去查询用户-->
    <select id="getUserById" resultType="com.example.pojo.commonPojo.User">
        select * from t_user where id=#{id}
    </select>

    <!-- 保存头像 -->
    <update id="saveAvatar">
        update t_user
        set avatar=#{avatar},
            modified_user=#{modifiedUser},
            modified_time=now()
        where id = #{id}
    </update>
</mapper>